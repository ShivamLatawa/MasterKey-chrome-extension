{
    "manifest_version": 2,

    "name": "MasterKey Plugin",
    "description": "This extension will hold all your passwords",
    "version": "1.0",

    "background": {
        "scripts": ["background.js"]
    },

    "options_page": "options.html",

    "content_scripts": [{
        "matches": ["http://*/*"],
        "js": ["contentScript.js"]
    }],

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "home.html"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "*://*/*"
    ]
}
